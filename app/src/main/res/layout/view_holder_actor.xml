<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/size_80"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.sokolkatya.myapplication.ui.view.SquareShapeableImageView
        android:id="@+id/iv_movie_actor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/movie_details_cast_1" />

    <TextView
        android:id="@+id/tv_movie_actor_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_6"
        android:maxLines="2"
        android:text="@string/movie_details_robert_downey_jr"
        android:textAppearance="@style/TextAppearance.Bold.12"
        android:textColor="@color/white" />

</LinearLayout>