<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_russian">

        <ImageView
            android:id="@+id/iv_movie_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/movie_detail_main"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_movie_picture_mask"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/bg_rect_gradient"
            app:layout_constraintBottom_toBottomOf="@id/iv_movie_picture"
            app:layout_constraintTop_toTopOf="@id/iv_movie_picture" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="16dp" />

        <TextView
            android:id="@+id/tv_movie_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_56"
            android:clickable="true"
            android:drawablePadding="@dimen/padding_3"
            android:focusable="true"
            android:gravity="center"
            android:padding="@dimen/padding_5"
            android:text="@string/movie_details_back"
            android:textAppearance="@style/TextAppearance.Regular.12"
            android:textColor="@color/white_alpha_50"
            app:drawableStartCompat="@drawable/ic_back"
            app:drawableTint="@color/white_alpha_50"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toTopOf="@+id/iv_movie_picture" />

        <TextView
            android:id="@+id/tv_movie_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/movie_details_avengers_end_game"
            android:textAppearance="@style/TextAppearance.Bold.40"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/iv_movie_picture"
            app:layout_constraintEnd_toEndOf="@+id/guideline_end"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/iv_movie_picture"
            tool:text="Avengers:\nEnd Game" />

        <TextView
            android:id="@+id/tv_movie_age_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_12"
            android:gravity="center"
            android:text="@string/movie_details_13"
            android:textAppearance="@style/TextAppearance.Bold.12"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/tv_movie_name"
            app:layout_constraintStart_toStartOf="@+id/guideline_start" />

        <TextView
            android:id="@+id/tv_movie_genres"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4"
            android:gravity="start"
            android:text="@string/movie_details_action_adventure_fantasy"
            android:textAppearance="@style/TextAppearance.Regular.14"
            android:textColor="@color/radical_red"
            app:layout_constraintEnd_toEndOf="@+id/guideline_end"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/tv_movie_name" />

        <RatingBar
            android:id="@+id/rb_movie_rating"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:numStars="5"
            android:rating="4"
            android:stepSize="0.5"
            android:theme="@style/Widget.MyApplication.RatingBar"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/tv_movie_genres" />

        <TextView
            android:id="@+id/tv_movie_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_8"
            android:gravity="start|center_vertical"
            android:text="@string/movie_details_125_reviews"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.Bold.14"
            android:textColor="@color/comet"
            app:layout_constraintBottom_toBottomOf="@+id/rb_movie_rating"
            app:layout_constraintStart_toEndOf="@+id/rb_movie_rating"
            app:layout_constraintTop_toTopOf="@+id/rb_movie_rating" />

        <TextView
            android:id="@+id/tv_movie_storyline_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_28"
            android:gravity="start"
            android:text="@string/movie_details_storyline"
            android:textAppearance="@style/TextAppearance.Bold.14"
            android:textColor="@color/whisper"
            app:layout_constraintEnd_toEndOf="@+id/guideline_end"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/tv_movie_review" />

        <TextView
            android:id="@+id/tv_movie_storyline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4"
            android:gravity="start"
            android:text="@string/movie_details_description"
            android:textAppearance="@style/TextAppearance.Regular.14"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/guideline_end"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/tv_movie_storyline_title" />

        <TextView
            android:id="@+id/tv_movie_cast_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_24"
            android:gravity="start"
            android:text="@string/movie_details_cast"
            android:textAppearance="@style/TextAppearance.Bold.14"
            android:textColor="@color/whisper"
            app:layout_constraintEnd_toEndOf="@+id/guideline_end"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/tv_movie_storyline" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_actors"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_10"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline_end"
            app:layout_constraintStart_toEndOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/tv_movie_cast_title"
            app:layout_constraintVertical_bias="0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>